<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="addItemMain" alignment="TOP_CENTER" prefHeight="600.0" prefWidth="900.0" stylesheets="@css/add-menu-items-popup.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rms.rms.AddMenuItemsController">


    <children>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="900.0" styleClass="header-box">
            <children>
                <Label styleClass="header-label" text=" Add Menu Items" textFill="WHITE">
                    <font>
                        <Font name="Tiro Tamil" size="36.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <StackPane styleClass="background-pane" VBox.vgrow="ALWAYS">
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0" StackPane.alignment="CENTER">
                    <children>
                        <VBox alignment="CENTER" prefHeight="0.0" prefWidth="400.0" styleClass="center-card">
                            <HBox.margin>
                                <Insets bottom="20.0" top="20.0" />
                            </HBox.margin>
                            <children>
                                <VBox prefHeight="80.0" prefWidth="360.0" spacing="5.0">
                                    <children>
                                        <HBox alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="200.0">
                                            <children>
                                                <Label styleClass="form-label" text="Select Menu Section : ">
                                                    <font>
                                                        <Font name="Arial Rounded MT Bold" size="16.0" />
                                                    </font>
                                                </Label>
                                            </children>
                                        </HBox>
                                        <HBox prefHeight="100.0" prefWidth="200.0">
                                            <children>
                                                <MenuButton fx:id="sectionDropDown" contentDisplay="CENTER" graphicTextGap="10.0" lineSpacing="5.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="165.0" styleClass="menu-button" text="Menu Button">
                                                    <items>
                                                        <MenuItem mnemonicParsing="false" text="Main Course" />
                                                        <MenuItem mnemonicParsing="false" text="Starters" />
                                                        <MenuItem mnemonicParsing="false" text="Deserts" />
                                                        <MenuItem mnemonicParsing="false" text="Beverages" />
                                                    </items>
                                                </MenuButton>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                                <VBox prefHeight="80.0" prefWidth="360.0" spacing="5.0">
                                    <children>
                                        <HBox alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="200.0">
                                            <children>
                                                <Label styleClass="form-label" text="Menu Item Name : ">
                                                    <font>
                                                        <Font name="Arial Rounded MT Bold" size="16.0" />
                                                    </font>
                                                </Label>
                                            </children>
                                        </HBox>
                                        <HBox prefHeight="100.0" prefWidth="200.0">
                                            <children>
                                                <TextField fx:id="foodName" prefHeight="26.0" prefWidth="165.0" promptText="Bhendi Fry" styleClass="text-field" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                                <VBox prefHeight="80.0" prefWidth="100.0" spacing="5.0">
                                    <children>
                                        <HBox alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="200.0">
                                            <children>
                                                <Label styleClass="form-label" text="Price in ₹ : ">
                                                    <font>
                                                        <Font name="Arial Rounded MT Bold" size="16.0" />
                                                    </font>
                                                </Label>
                                            </children>
                                        </HBox>
                                        <HBox prefHeight="100.0" prefWidth="200.0">
                                            <children>
                                                <TextField fx:id="foodPrice" prefHeight="26.0" prefWidth="165.0" styleClass="text-field" text=" ₹ " />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                                    <children>
                              <Label fx:id="successMessage" alignment="CENTER" prefHeight="173.0" prefWidth="360.0" textFill="#23d000" VBox.vgrow="ALWAYS">
                                 <font>
                                    <Font name="Al Bayan Bold" size="24.0" />
                                 </font>
                              </Label>
                                        <HBox alignment="BOTTOM_CENTER" prefHeight="161.0" prefWidth="360.0" spacing="20.0" VBox.vgrow="ALWAYS">
                                            <children>
                                                <Button id="addItemButton" fx:id="addItemButton" mnemonicParsing="false" onMouseClicked="#addMenuItemToDB" prefHeight="38.0" prefWidth="101.0" text="Add Item" textFill="WHITE" />
                                                <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleClose" prefHeight="38.0" prefWidth="101.0" text="Close" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </StackPane>
    </children>
</VBox>
